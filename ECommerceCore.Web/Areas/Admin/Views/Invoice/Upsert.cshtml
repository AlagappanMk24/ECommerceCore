    <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-2xl p-8 glassmorphism">
        <!-- Header -->
        <h2 class="text-2xl font-bold text-indigo-700 mb-6 flex items-center">
            <i class="fas fa-file-invoice mr-2 text-indigo-500"></i> New Invoice
