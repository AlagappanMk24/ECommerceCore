                <div class="grid item-grid grid-cols-12 gap-2 items-center">
                    <div class="col-span-4">
                        <input type="text" class="input-style w-full text-sm" placeholder="Service name" />
                    </div>
                    <div class="col-span-3">
                        <input type="text" class="input-style w-full text-sm" placeholder="Description" />
                    </div>
                    <div class="col-span-2">
                        <input type="number" value="1" class="input-style w-full text-sm text-right" oninput="updateSummary()" />
                    </div>
                    <div class="col-span-2">
                        <input type="number" value="0.00" step="0.01" class="input-style w-full text-sm text-right" oninput="updateSummary()" />
                    </div>
                    <div class="col-span-1 flex justify-center">
                        <button type="button" onclick="removeItem(this)" class="delete-btn">
                            <i class="fas fa-trash-alt text-sm"></i>
                        </button>
                    </div>
                </div>
            </div>`;
        container.insertAdjacentHTML('beforeend', itemHtml);
        updateSummary();
    }

    function removeItem(button) {
        if (document.querySelectorAll('.item-row').length > 1) {
            button.closest('.item-row').remove();
            updateSummary();
        } else {
            alert('You must have at least one item in the invoice');
        }
    }

    function updateSummary() {
        let subtotal = 0;
        document.querySelectorAll('.item-row').forEach(row => {
            const quantityInput = row.querySelector('div.col-span-2 input');
            const priceInput = row.querySelector('div.col-span-1 input');

            const quantity = parseFloat(quantityInput.value) || 0;
            const price = parseFloat(priceInput.value) || 0;
            subtotal += quantity * price;
        });

        const discount = parseFloat(document.getElementById('discount').value) || 0;
        const taxRate = parseFloat(document.getElementById('taxRate').value) || 0;

        const discountAmount = subtotal * discount / 100;
        const subtotalAfterDiscount = subtotal - discountAmount;
        const taxAmount = subtotalAfterDiscount * taxRate / 100;
        const total = subtotalAfterDiscount + taxAmount;

        document.getElementById('subtotal').value = subtotal.toFixed(2);
        document.getElementById('total').value = total.toFixed(2);
    }
</script>