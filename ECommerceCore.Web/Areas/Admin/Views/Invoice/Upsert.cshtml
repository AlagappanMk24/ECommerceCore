                    <input type="number" id="discount" value="0.00" step="0.01" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" oninput="updateSummary()" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Tax (%)</label>
                    <input type="number" id="taxRate" value="0.00" step="0.01" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" oninput="updateSummary()" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Total Amount</label>
                    <input type="text" id="total" value="0.00" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm bg-gray-100 sm:text-sm" readonly />
                </div>
            </div>
        </div>

        <!-- Notes and Attachments -->
