                    <option value="2" data-name="Jane Smith" data-email="jane.smith@example.com" data-phone="555-0202" data-address="456 Oak St, Boston, MA - 02108, USA">Jane Smith</option>
                    <option value="3" data-name="Acme Corp" data-email="contact@acmecorp.com" data-phone="555-0203" data-address="789 Pine St, San Francisco, CA - 94105, USA">Acme Corp</option>
                </select>
            </div>
            <div id="newCustomer" class="hidden mb-4">
                <label class="block text-sm font-medium text-gray-700">Name</label>
