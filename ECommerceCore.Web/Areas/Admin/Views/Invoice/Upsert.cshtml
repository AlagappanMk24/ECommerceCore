                <label class="block text-sm font-medium text-gray-700 mt-2">Phone Number</label>
                <input type="text" id="newCustomerPhone" placeholder="Enter the phone number" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <label class="block text-sm font-medium text-gray-700 mt-2">Address 1</label>
                <input type="text" id="newCustomerAddress1" placeholder="Enter the address 1" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <label class="block text-sm font-medium text-gray-700 mt-2">Address 2</label>
                <input type="text" id="newCustomerAddress2" placeholder="Enter the address 2" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <label class="block text-sm font-medium text-gray-700 mt-2">City</label>
                <input type="text" id="newCustomerCity" placeholder="Enter the city" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <label class="block text-sm font-medium text-gray-700 mt-2">State</label>
                <input type="text" id="newCustomerState" placeholder="Enter the state" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <label class="block text-sm font-medium text-gray-700 mt-2">Country</label>
                <input type="text" id="newCustomerCountry" placeholder="Enter the country" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                <label class="block text-sm font-medium text-gray-700 mt-2">Zip Code</label>
                <input type="text" id="newCustomerZip" placeholder="Enter the zip code" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
            </div>
            <div class="flex justify-end space-x-2">
                <button type="button" onclick="selectCustomer()" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700">OK</button>
                <button type="button" onclick="closeCustomerModal()" class="bg-gray-300 px-4 py-2 rounded-lg hover:bg-gray-400">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    function openCustomerModal() {
        document.getElementById('customerModal').classList.remove('hidden');
        document.getElementById('existingCustomer').classList.remove('hidden');
        document.getElementById('newCustomer').classList.add('hidden');
    }

    function closeCustomerModal() {
        document.getElementById('customerModal').classList.add('hidden');
    }

    document.querySelectorAll('input[name="customerOption"]').forEach(radio => {
        radio.addEventListener('change', function() {
            const value = this.value;
            if (value === 'existing') {
                document.getElementById('existingCustomer').classList.remove('hidden');
                document.getElementById('newCustomer').classList.add('hidden');
            } else {
                document.getElementById('existingCustomer').classList.add('hidden');
                document.getElementById('newCustomer').classList.remove('hidden');
            }
        });
    });

    function selectCustomer() {
        const customerOption = document.querySelector('input[name="customerOption"]:checked').value;
        const customerInfo = document.getElementById('customerInfo');
        const customerName = document.getElementById('customerName');
        const customerEmail = document.getElementById('customerEmail');
        const customerPhone = document.getElementById('customerPhone');
        const customerAddress = document.getElementById('customerAddress');

        if (customerOption === 'existing') {
            const select = document.getElementById('customerSelect');
            const selectedOption = select.options[select.selectedIndex];
            if (selectedOption.value) {
                customerName.textContent = selectedOption.dataset.name;
                customerEmail.textContent = selectedOption.dataset.email;
                customerPhone.textContent = selectedOption.dataset.phone;
                customerAddress.textContent = selectedOption.dataset.address;
                customerInfo.classList.remove('hidden');
            }
        } else {
            const name = document.getElementById('newCustomerName').value;
            const email = document.getElementById('newCustomerEmail').value;
            const phone = document.getElementById('newCustomerPhone').value;
            const address1 = document.getElementById('newCustomerAddress1').value;
            const address2 = document.getElementById('newCustomerAddress2').value;
            const city = document.getElementById('newCustomerCity').value;
            const state = document.getElementById('newCustomerState').value;
            const country = document.getElementById('newCustomerCountry').value;
            const zip = document.getElementById('newCustomerZip').value;

            if (name && email) {
                const fullAddress = [address1, address2, city, state, country, zip].filter(Boolean).join(', ');
                customerName.textContent = name;
                customerEmail.textContent = email;
                customerPhone.textContent = phone || 'N/A';
                customerAddress.textContent = fullAddress || 'N/A';
                customerInfo.classList.remove('hidden');
            }
        }
        closeCustomerModal();
    }

    function switchToManual() {
        const input = document.getElementById('invoiceNumber');
        input.removeAttribute('readonly');
        input.classList.remove('bg-gray-100');
        input.value = '';
        input.focus();
    }

    function addItem() {
        const container = document.getElementById('itemsContainer');
        const index = container.children.length;
        const itemHtml = `
            <div class="item-row grid grid-cols-1 sm:grid-cols-4 gap-4 p-4 bg-indigo-50 rounded-lg fade-in">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Service</label>
                    <input type="text" placeholder="Enter service" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Description</label>
                    <input type="text" placeholder="Enter description" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Unit</label>
                    <input type="number" value="0" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" oninput="updateSummary()" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Price</label>
                    <input type="number" value="0.00" step="0.01" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" oninput="updateSummary()" />
                </div>
                <div class="sm:col-span-4 flex justify-end">
                    <button type="button" onclick="removeItem(this)" class="text-red-600 hover:text-red-800"><i class="fas fa-trash"></i></button>
                </div>
            </div>`;
        container.insertAdjacentHTML('beforeend', itemHtml);
        updateSummary();
    }

    function removeItem(button) {
        button.closest('.item-row').remove();
        updateSummary();
    }

    function updateSummary() {
        let subtotal = 0;
        document.querySelectorAll('.item-row').forEach(row => {
            const quantity = parseFloat(row.querySelector('input[type="number"][placeholder="Enter unit"]').value) || 0;
            const price = parseFloat(row.querySelector('input[type="number"][placeholder="Enter price"]').value) || 0;
            subtotal += quantity * price;
        });
        const discount = parseFloat(document.getElementById('discount').value) || 0;
        const taxRate = parseFloat(document.getElementById('taxRate').value) || 0;
        const tax = (subtotal * taxRate) / 100;
        const total = subtotal - (subtotal * discount / 100) + tax;

        document.getElementById('subtotal').value = subtotal.toFixed(2);
        document.getElementById('total').value = total.toFixed(2);
    }

    document.addEventListener('DOMContentLoaded', () => {
        updateSummary();
    });
</script> *@

