@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card glass-effect shadow-lg border-0 d-flex flex-row align-items-stretch overflow-hidden">
                    <!-- Form Section -->
                    <div class="col-md-6 p-5 vertical-align-middle">
                        <h3 class="text-primary mb-4 text-center">Forgot your password?</h3>
                        <p class="text-muted text-center mb-4">Enter your email.</p>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2 fw-bold">Reset Password</button>
                        </form>
                    </div>
                    <!-- Image Section -->
                    <div class="col-md-6 d-none d-md-block">
                        <img src="~/images/login.jpg" class="h-100 w-100 rounded-end" style="object-fit:cover" alt="Login Image" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f5f5dc;
    }

    /* Glass Effect Card */
    .glass-effect {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 1.2rem;
        padding: 2rem;
        box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.15);
    }

    .card {
        border-radius: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: 500;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .vertical-align-middle {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
</style>
