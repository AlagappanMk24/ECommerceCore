@model int
<div class="container my-5">
    <div class="row justify-content-center align-items-center">
        <!-- Success Icon and Message -->
        <div class="col-12 text-center">
            <div class="mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
            </div>
            <h1 class="text-success fw-bold">Order Placed Successfully!</h1>
            <p class="text-muted fs-5">Your order has been processed and is on its way!</p>
        </div>

        <!-- Order Details -->
        <div class="col-12 text-center my-3">
            <p class="fs-4">Your Order Number:</p>
            <div class="badge bg-primary fs-3 p-3">
                <strong>#@Model</strong>
            </div>
        </div>

        <!-- Image Section -->
        <div class="col-12 text-center my-4">
            <img src="~/Images/lawn_leaf.jpg" class="img-fluid rounded shadow" alt="Order Image" />
        </div>

        <!-- Action Buttons -->
        <div class="col-12 text-center">
            <p class="text-muted">What would you like to do next?</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="/orders/details/@Model" class="btn btn-primary btn-lg">
                    <i class="fas fa-receipt me-2"></i>View Order Details
                </a>
                <a href="/" class="btn btn-outline-success btn-lg">
                    <i class="fas fa-home me-2"></i>Return to Home
                </a>
            </div>
        </div>

        <!-- Footer Note -->
        <div class="col-12 text-center mt-5">
            <p class="text-muted fst-italic">
                Thank you for shopping with us! If you have any questions, please
                <a href="/contact" class="text-decoration-none text-primary">contact us</a>.
            </p>
        </div>
    </div>
</div>
