@using ECommerceCore.Domain.Entities.Identity
@model ApplicationUser
<style>
    body {
        background-color: #f8f9fa;
    }

    .profile-header {
        background: linear-gradient(135deg, #007bff, #6c757d);
        color: white;
        padding: 30px 0;
        text-align: center;
    }

        .profile-header img {
            border-radius: 50%;
            border: 5px solid white;
            width: 120px;
            height: 120px;
            object-fit: cover;
        }

        .profile-header h1 {
            font-size: 2rem;
        }

        .profile-header p {
            margin-top: 5px;
            font-size: 1.2rem;
        }

    .tab-content {
        padding-top: 20px;
    }

    .card-custom {
        border: none;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }
</style>


<div class="profile-header">
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT13oQuXdWlUD3g7R6nigTpyYvvwPC7hCYf5XOFO6fwL3G98PGuWQujoW2cIKcSRmh_Z08&usqp=CAU" alt="Profile Picture">
    <h1>John Doe</h1>
    <p><i class="bi bi-envelope-fill"></i> @Model.Email</p>
    <p><i class="bi bi-geo-alt-fill"></i> @Model.City, @Model.State</p>
</div>

<div class="container my-5">
    <div class="row">
        <!-- Profile Details -->
        <div class="col-lg-4 mb-4">
            <div class="card card-custom">
                <div class="card-body">
                    <h5 class="card-title">Profile Details</h5>
                    <p><strong>Full Name:</strong> @Model.Name</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                    <p><strong>Address:</strong> @Model.Address1, @Model.Address2 @Model.City, @Model.State, @Model.PostalCode</p>
                    <form asp-controller="User" asp-action="EditProfile" id="editProfileForm" method="get">
                        <button type="submit" class="btn btn-custom btn-sm mt-2"><i class="bi bi-pencil-square"></i> Edit Profile</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tabs Section -->
        <div class="col-lg-8">
            <ul class="nav nav-tabs" id="profileTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab" aria-controls="overview" aria-selected="true">
                        Overview
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab" aria-controls="orders" aria-selected="false">
                        Orders
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab" aria-controls="settings" aria-selected="false">
                        Settings
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="profileTabContent">
                <!-- Overview Tab -->
                <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
                    <div class="card card-custom">
                        <div class="card-body">
                            <h5>About</h5>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin sed diam at neque luctus egestas. Cras ut tortor ac enim vulputate congue.</p>
                        </div>
                    </div>
                </div>

                <!-- Orders Tab -->
                <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                    <div class="card card-custom">
                        <div class="card-body">
                            <h5>Recent Orders</h5>
                            <ul class="list-group">
                                <li class="list-group-item">Order #1234 - <span class="text-success">Completed</span></li>
                                <li class="list-group-item">Order #5678 - <span class="text-warning">Pending</span></li>
                                <li class="list-group-item">Order #91011 - <span class="text-danger">Cancelled</span></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Settings Tab -->
                <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="settings-tab">
                    <div class="card card-custom">
                        <div class="card-body">
                            <h5>Account Settings</h5>
                            <p>Update your account preferences and settings here.</p>
                            <button class="btn btn-custom btn-sm"><i class="bi bi-gear-fill"></i> Manage Settings</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>