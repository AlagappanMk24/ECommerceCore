@using ECommerceCore.Domain.Entities.Identity
@model ApplicationUser


<div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg border-0" style="max-width: 600px; width: 100%;">
        <div class="card-body p-4">
            <h2 class="text-center mb-4">Edit your profile</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <form method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="@Model.Name" class="form-control" aria-required="true" placeholder="Name" />
                            <label asp-for="@Model.Name">Name</label>
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="@Model.Email">Email</label>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" placeholder="Phone Number" />
                            <label asp-for="@Model.PhoneNumber">Phone Number</label>
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="@Model.Address1" class="form-control" aria-required="true" placeholder="Address Line 1" />
                            <label asp-for="@Model.Address1">Address Line 1</label>
                            <span asp-validation-for="@Model.Address1" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="@Model.Address2" class="form-control" aria-required="true" placeholder="Address Line 2" />
                            <label asp-for="@Model.Address2">Address Line 2</label>
                            <span asp-validation-for="@Model.Address2" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="@Model.City" class="form-control" aria-required="true" placeholder="City" />
                            <label asp-for="@Model.City">City</label>
                            <span asp-validation-for="@Model.City" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="@Model.State" class="form-control" aria-required="true" placeholder="State" />
                            <label asp-for="@Model.State">State</label>
                            <span asp-validation-for="@Model.State" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="@Model.PostalCode" class="form-control" aria-required="true" placeholder="Postal Code" />
                            <label asp-for="@Model.PostalCode">Postal Code</label>
                            <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button id="registerSubmit" type="submit" class="btn btn-primary w-100 mt-4">Update</button>
            </form>
        </div>
    </div>
</div>