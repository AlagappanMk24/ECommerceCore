<!-- Hidden Anti-Forgery Token for AJAX -->
@Html.AntiForgeryToken()

<!-- JavaScript for Logout -->

<script type="text/javascript">
         const logoutLink = document.getElementById('logoutLink');
         if (logoutLink) {
             logoutLink.addEventListener('click', function (e) {
                 e.preventDefault();

                 // Get anti-forgery token
                 const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                 if (!tokenInput) {
                     Swal.fire({
                         icon: 'error',
                         title: 'Error',
                         text: 'Anti-forgery token missing. Please refresh the page.'
                     });
                     return;
                 }
                 const token = tokenInput.value;

                 // Send AJAX POST request to logout
                 fetch('/Identity/Account/Logout', {
                     method: 'POST',
                     headers: {
                         'Content-Type': 'application/json',
                         'RequestVerificationToken': token
                     },
                     body: JSON.stringify({})
                 })
                 .then(response => {
                     if (!response.ok) {
                         throw new Error(`Logout failed: ${response.statusText}`);
                     }
                     return response.json();
                 })
                 .then(data => {
                     if (data.status === 'Success') {
                       Swal.fire({
                            icon: 'success',
                            title: 'Logged Out',
                            text: 'You have been logged out successfully.',
                            timer: 1500,
                            showConfirmButton: false
                        }).then(() => {
                             window.location.href = '/Home/LandingPage';
                        });
                     } else {
                         throw new Error('Unexpected response: ' + data);
                     }
                 })
                 .catch(error => {
                     console.error('Logout error:', error);
                     Swal.fire({
                         icon: 'error',
                         title: 'Error',
                         text: 'An error occurred while logging out: ' + error.message
                     });
                 });
             });
         }
         else {
             console.warn('Logout link not found in DOM.');
         }

