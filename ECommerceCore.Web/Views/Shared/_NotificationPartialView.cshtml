@* By Using toaster *@
@if (TempData["Success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": true,
                "showDuration": "500", // Show animation (milliseconds)
                "hideDuration": "1000", // Hide animation (milliseconds)
                "timeOut": "5000", // Auto-dismiss after 5 seconds
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn", // Animation type for showing
                "hideMethod": "fadeOut"   // Animation type for hiding
            };
            toastr.success('<i class="fas fa-check-circle"></i> @TempData["Success"]', 'Success', { closeButton: true });
        });
    </script>
}

